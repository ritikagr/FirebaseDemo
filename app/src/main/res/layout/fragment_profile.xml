<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.codeflight.ritik.firebasedemo.ProfileFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/title_username"
            android:textColor="@android:color/holo_blue_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="username"
            android:id="@+id/username_profile"
            android:editable="false"
            android:layout_below="@+id/title_username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/title_email"
            android:layout_below="@+id/username_profile"
            android:textColor="@android:color/holo_blue_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="email"
            android:id="@+id/email_profile"
            android:editable="false"
            android:layout_below="@+id/title_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:id="@+id/title_dob"
            android:layout_below="@+id/email_profile"
            android:textColor="@android:color/holo_blue_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="DOB"
            android:id="@+id/dob_profile"
            android:layout_below="@+id/title_dob"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:id="@+id/title_mobile"
            android:layout_below="@+id/dob_profile"
            android:textColor="@android:color/holo_blue_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="mobile"
            android:id="@+id/mobile_profile"
            android:layout_below="@+id/title_mobile"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save_profile"
            android:layout_below="@+id/mobile_profile"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
